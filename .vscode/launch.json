{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Listen for xdebug",
        "type": "php",
        "request": "launch",
        "port": 9003
      },
      {
        "type": "msedge",
        "request": "launch",
        "name": "Launch AFInfinity",
        "url": "https://localhost:4443/AFInfinite/"
      },
      {
        "name": "Launch currently open script",
        "type": "php",
        "request": "launch",
        "program": "${file}",
        "cwd": "${fileDirName}",
        "port": 0,
        "runtimeExecutable": "C:\\xampp\\php\\php.exe",
        "runtimeArgs": [
            "-dxdebug.start_with_request=yes"
        ],
        "env": {
            "XDEBUG_MODE": "debug.develop",
            "XDEBUG_CONFIG": "client_port=${port}"
        }
      }
    ]
  }